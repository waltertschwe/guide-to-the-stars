{% extends '::base.html.twig' %}
{% block body %}
{{ include('::nav.html.twig') }}
{% for flashMessage in app.session.flashbag.get('notice') %}
  <div class="alert alert-success">  
    	<a class="close" data-dismiss="alert">Ã—</a>  
        {{ flashMessage }}
        <b><a href="">Click Here</a> to configure your event.</b>
    </div>
{% endfor %}
<div class="container">
	<div class="page-header">
	    <h1>Red Carpet Live</h1>
	</div>
	<div class="well">
		<div class="row">
			<form method="post" action="create" class="form-horizontal" role="form">
			<div class="form-group">
				<div class="col-md-10">
					<div class="form-group row">
						<div class="col-md-4">
							<input class="form-control input-lg" type="text" name="event_name" id="event_name" size="36" required="required" placeholder="Event Name" />
						</div>
						<div class="col-md-2">
							<button name="submit" type="submit" class="btn btn-lg btn-success">Create Event &raquo;</button>
						</div>
					</div>
	   		   </div>	
			</form>
			</div>
		</div>
	</div>
</div>
<div class="container">
<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
<thead>
	<tr>
		<!-- <th>ID</th> -->
		<th>Event Name</th>
		<th>Date</th>
		<th>Site State</th>
		<th>Actions</th>
	</tr>
</thead>
<tbody>
{% for event in events %}
<tr class="gradeC">
	<td class="center">{{ event.eventName }}</td>
	<td class="center">{{ event.dateTime|date("m/d/Y h:s") }}</td>
	<td class="center">{{ event.eventState }}</td>
	<td class="center">
		 <a href="dashboard/{{ event.id }}" class="link" data-toggle="tooltip" title="To Event Dashboard"><span class="glyphicon glyphicon-home"></a>
         <a href="config/{{ event.id }}" class="link" data-toggle="tooltip" title="To Event Config"><span class="glyphicon glyphicon-circle-arrow-up"></span></a>
         <a href="events/event-delete.php?event_id=133" class="delbtn" title="Are you sure you want to delete event <blink><b>2013Oscars</b></blink>???"><span class="glyphicon glyphicon-trash"></span></a>	
	</td>
</tr>
{% endfor %}
</tbody>
	<tfoot>
		<tr>			
			<th>Event Name</th>
			<th>Date</th>
			<th>Site State</th>
			<th>Actions</th>   
		</tr>
	</tfoot>
</table>
</div>
{% endblock %}
