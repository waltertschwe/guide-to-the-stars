{% extends '::base.html.twig' %}
{% block body %}
{{ include('::nav.html.twig') }}
<div class="container">
	<p></p>
	<div class="update-event">
		
	<div class="event-text">
		<h1>Star Creation</h1>
	</div>
	</div>
</div>
<div class="container">
<form method="post" action="create" class="form-horizontal" role="form">
		<div class="form-group">
			<label for="event_name" class="col-sm-2 control-label">Name</label>
			<div class="col-xs-4">
				<input class="form-control input-lg" type="text" name="event_name" id="event_name" size="36" required="required"/>
			</div>
		</div>
		<div class="form-group">
			<label for="event_description" class="col-sm-2 control-label">Description</label>
			<div class="col-xs-4">
				 <textarea class="ckeditor" cols="80" id="editor1" name="editor1" rows="10"></textarea>
				 <script>
				// Replace the <textarea id="editor"> with an CKEditor
				// instance, using default configurations.
				CKEDITOR.replace( 'editor1', {
					uiColor: '#14B8C4',
					toolbar: [
						[ 'Bold', 'Italic', '-', 'NumberedList', 'BulletedList', '-', 'Link', 'Unlink' ],
						[ 'FontSize', 'TextColor', 'BGColor' ]
					]
				});
	
			</script>
			</div>
		</div>
		<div class="form-group">
   			<div class="col-sm-offset-2 col-sm-10">
   				<button name="submit" type="submit" class="btn btn-lg btn-primary">Create Event</button>
    		</div>
  		</div>
	</form>
</div>
{% endblock %}