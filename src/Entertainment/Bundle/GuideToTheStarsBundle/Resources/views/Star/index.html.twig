{% extends '::base.html.twig' %}
{% block body %}
{{ include('::nav.html.twig') }}
<div class="container">
<ol class="breadcrumb">
  <li>  
    <a href="{{ path('entertainment_redcarpet_event_dashboard', {'eventId': event.id}) }}">{{ event.eventName }}</a>
  </li>  
  <li class="active">Guide To The Stars</li>  
</ol>  
	<div class="page-header">
	    <h1><a href="{{ path('entertainment_redcarpet_event_dashboard', {'eventId': event.id}) }}">{{ event.eventName }}</a> - Guide To The Stars</h1>
	</div>
	<div class="well">
<p>
<!-- Split button -->
<div class="btn-group">
  <a href="{{ path('entertainment_guidetothestars_config_index', {'eventId': event.id}) }}"><button type="button" class="btn btn-primary">Config</button></a>
  <a href="{{ path('entertainment_guidetothestars_star_create', {'eventId': event.id}) }}"><button type="button" class="btn btn-primary">Create Star <span class="glyphicon glyphicon-star"></span></button></a>
  <a href="{{ path('entertainment_guidetothestars_category_create', {'eventId': event.id}) }}"><button type="button" class="btn btn-success" >Create Category</button></a>
  <a href="{{ path('entertainment_guidetothestars_category_index', {'eventId': event.id}) }}"><button type="button" class="btn btn-success">View Categories</button></a>
</div>
</p>
</div>
</div>
<div class="container">
	<h3>Stars of the Event</h3>
</div>
<div class="container">
<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
<thead>
	<tr>
		<th>Name</th>
		<th>Categories</th>
		<th>Actions</th>
	</tr>
</thead>
<tbody>
{% for star in stars %}
<tr class="gradeA">
	
	<td class="center"><a href="{{ path('entertainment_guidetothestars_star_addcontent', {'eventId': event.id, 'starId' : star.id}) }}">{{ star.starName}}</a></td>
	<td class="center">{% for category in star.category %} {{ category.categoryName}} <br/> {% endfor %}</td>
	<td class="center">
	<a href="{{ path('entertainment_guidetothestars_star_addcontent', {'eventId': event.id, 'starId' : star.id}) }}" class="link" data-toggle="tooltip" title="">
		<span class="glyphicon glyphicon glyphicon-plus"></span></a>
	<a href="{{ path('entertainment_guidetothestars_star_update', {'eventId': event.id, 'starId' : star.id}) }}" class="link" data-toggle="tooltip" title=""><span class="glyphicon glyphicon glyphicon-edit"></span></a>
    <a href="" class="delbtn" title="Are you sure you want to delete this star {{ star.starName }} ???"><span class="glyphicon glyphicon-trash"></span></a>
         	
	</td>
</tr>
{% endfor %}
</tbody>
	<tfoot>
		<tr>			
			<th>Name</th>
			<th>Categories</th>
			<th>Actions</th>   
		</tr>
	</tfoot>
</table>
</div>
{% endblock %}
