{% extends '::base.html.twig' %}
{% block body %}
{{ include('::nav.html.twig') }}
<div class="container">
<ol class="breadcrumb">
  <li>  
    <a href="{{ path('entertainment_redcarpet_event_dashboard', {'eventId': event.id}) }}">{{ event.eventName }}</a>
  </li>  
  <li>
  	<a href="{{ path('entertainment_guidetothestars_star_index', {'eventId': event.id}) }}">Guide To The Stars</a>
  	
  </li>  
  <li class="active">Add Content</li>
</ol>  
	<p></p>	
	<div class="event-text">
		<h1>Add Content -- {{ star.starName}}</h1>
	</div>
<div class="row">
  <div class="col-xs-6 col-md-4"><!-- Button trigger modal -->
 	<div class="btn-group-vertical">
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#videoType">
  Video
</button>
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#toutType">
  Tout
</button>
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#quoteType">
  Quote
</button>
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#factType">
  Fun Fact
</button>
<button class="btn btn-danger btn-lg" data-toggle="modal" data-target="#factType">
  Twitter Post
</button>
</div>
<!-- Modal -->
<div class="modal fade" id="videoType" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Video Content -- {{ star.starName}}</h4>
      </div>
      <div class="modal-body">
        <textarea name="video" class="form-control" rows="3" placeHolder="Video Embed Code"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="toutType" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Tout Content  -- {{ star.starName}}</h4>
      </div>
      <div class="modal-body">
      <form id="" method="post" action="" class="form-horizontal" role="form" enctype="multipart/form-data">
       <div class="container">
		     <div class="row">
	      		 <div class="form-group">
				     <div class="col-sm-6">
					      <input class="form-control input-lg" type="text" name="tout-title" id="quote" size="255" placeholder="Title"/>
				     </div>
			     </div>
			     <div class="form-group">
				     <div class="col-sm-6">
					      <input class="form-control input-lg" type="text" name="tout-url" id="quote" size="255" placeholder="URL"/>
				     </div>
			     </div>
			     <div class="form-group">
					 <label class="col-md-10">Tout Image</label>
					 <div class="col-sm-6">
						<input type="file" name="tout-image">
					 </div>
				</div>
				<div class="form-group">
				     <div class="col-sm-6">
					      <input class="form-control input-lg" type="text" name="tout-caption" id="quote" size="255" placeholder="Caption"/>
				     </div>
			     </div>
			     <div class="form-group">
				     <div class="col-sm-6">
					      <input class="form-control input-lg" type="text" name="tout-credit" id="quote" size="255" placeholder="Credit"/>
				     </div>
			     </div>
      		</div>
      	</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
      </form>
    </div>
  </div>
</div>
<div class="modal fade" id="quoteType" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Quote Content  -- {{ star.starName}}</h4>
      </div>
      <div class="modal-body">
      	 <form id="" method="post" action="" class="form-horizontal" role="form" enctype="multipart/form-data">
      	 <div class="container">
		     <div class="row">
	             <div class="form-group">
			         <div class="col-sm-6">
				         <input class="form-control input-lg" type="text" name="quote-credit" id="quote-credit" size="255" placeholder="Quote Credit"/>
			         </div>
		         </div>
		          <div class="form-group">
			         <div class="col-sm-6">
				          <textarea name="quote" class="form-control" rows="3" placeHolder="Quote"></textarea>
			         </div>
		         </div>
		         <div class="form-group">
					 <label class="col-md-10">Quote Image</label>
					 <div class="col-sm-6">
						<input type="file" name="quote-image">
					 </div>
				</div>
		     </div>
		 </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
      </form>
    </div>
  </div>
</div>
<div class="modal fade" id="factType" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Fact Content  -- {{ star.starName}}</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>
  <div class="col-xs-12 col-md-8">.col-xs-12 .col-md-8</div>
</div>
</div>
{% endblock %}