	<div class="form-group">
		<div class="col-md-8">
		<input class="form-control input-lg" type="text" name="category-name" id="category-name" value="" size="255" required="required" placeholder="Category Name" />
		</div>
	</div>
	<div class="form-group">
   		<div class="col-sm-4"> 
			<button name="submit" value="Save" type="submit" class="btn btn-lg btn-primary">Save</button>&nbsp;&nbsp;
