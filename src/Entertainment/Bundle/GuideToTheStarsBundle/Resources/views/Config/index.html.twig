{% extends '::base.html.twig' %}
{% block body %}
{{ include('::nav.html.twig') }}

{% for flashMessage in app.session.flashbag.get('notice') %}
  <div class="alert alert-success">  
    	<a class="close" data-dismiss="alert">Ã—</a>  
        {{ flashMessage }}
    </div>
{% endfor %}
<div class="container">
<ol class="breadcrumb">
  <li>  
    <a href="{{ path('entertainment_redcarpet_event_dashboard', {'eventId': event.id}) }}">{{ event.eventName }}</a>
  </li>  
  <li>
  	<a href="{{ path('entertainment_guidetothestars_star_index', {'eventId': event.id}) }}">Guide To The Stars</a>
  </li>  
  <li class="active">Guide To The Stars - Config</li>
</ol>  	
	<p></p>	
	<div class="event-text">
		<h1>Guide To The Stars - Config</h1>
	</div>
</div>

<div class="container">
	<div class="row">
		<form name="form-config" method="post" action="" class="form-horizontal" role="form">
			<input type="hidden" name="event-id" value="{{ event.eventId }}" />
		<div class="col-md-8">
			<div class="form-group">
				<div class="col-md-10">
					<input class="form-control input-lg" type="text" name="app-title" id="app-title" size="255" value="{{ config.title }}" placeholder="Title"/>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<div class="col-md-10">
					<textarea cols="90" id="app-description" name="app-description" rows="10" placeholder="Page Description">{{ config.description }}</textarea>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<div class="col-md-10">
					<input class="form-control input-lg" type="text" name="star-text" id="star-text" size="255" value="{{ config.starDesc }}" required="required" placeholder="Star Text" />
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<div class="col-md-10">
					<input class="form-control input-lg" type="text" name="category-text" id="category-text" size="255" value="{{ config.categoryDesc}}" required="required" placeholder="Category Text"/>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<div class="col-md-10">
					<button name="submit" type="submit" class="btn btn-lg btn-success">Submit</button>
				</div>
			</div>
		</div>
	</div>
</div>
</form>
{% endblock %}